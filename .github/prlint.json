{
  "title": [
    {
      "pattern": "^(RT-\\d{1,4}-(build|ci|docs|feature|fix|perf|refactor|style|test):)|(Restyle)|(Update)\\s",
      "message": "Your title needs to be prefixed with a topic"
    }
  ],
  "body": [],
  "head.ref": [
    {
      "pattern": "((RT-\\d{1,4}-(build|ci|docs|feature|fix|perf|refactor|style|test))|(AngelsProjects-.*)|(development)|(master)|(renovate/.*)|(restyled/.*))",
      "message": "Your branch name is invalid"
    }
  ],
  "assignee.login": [
    {
      "pattern": ".+",
      "message": "You need to assign someone"
    }
  ],
  "requested_teams.0.id": [],
  "additions": [
    {
      "pattern": "^([0-9]|[1-9][0-9]|[1-9][0-9][0-9])$",
      "message": "Your PR is too big (over 999 additions)"
    }
  ],
  "labels.0.name": [
    {
      "pattern": "bug|enhancement|question|documentation|invalid",
      "message": "Please add a label"
    }
  ]
}
